<Window x:Class="HomeWork_11.AddDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_11"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="AddDepartment" 
        MaxHeight="225" MaxWidth="500"
        Width="500" Height="180">


    <StackPanel Grid.Column="0">
        <TextBox x:Name="DepNameBox" Margin="100,10,100,10"
                 materialDesign:HintAssist.Hint="Название организации" />
        <Button x:Name="AddDepButton" Margin="100,10,100,10"
                Click="AddDepButton_Click"
                Content="Добавить департамент"/>
    </StackPanel>
</Window>
